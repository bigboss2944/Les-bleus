<Page
    x:Class="UWP_FilRouge.Views.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_FilRouge.Views"
    xmlns:sellerUc="using:UWP_FilRouge.Views.Sellers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding AdminPageInstance, Source={StaticResource Locator}}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">



    <Grid Width="Auto" x:Name="mainGrid" >

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource LargeWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="#558c2f" />

                        <Setter Target="GridViewFooter.Background"
                                Value="#558c2f" />

                        <Setter Target="GridViewFooter.Visibility"
                                Value="Visible"/>

                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MediumWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="#558c2f" />
                        <Setter Target="GridViewHeader.RowSpan"
                                Value="3" />

                        <Setter Target="GridViewHeader.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="MainGrid.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="MainGrid.VerticalAlignment"
                                Value="Top" />

                        <Setter Target="GridViewHeader.Width"
                                Value="100px" />

                        <Setter Target="GridViewFooter.Visibility"
                                Value="Collapsed" />

                        <Setter Target="bike.Margin"
                                Value="15,15,0,0"/>

                        <Setter Target="HomePageButton.Margin"
                                Value="15,125,0,0"/>

                        <Setter Target="ContactPageButton.Margin"
                                Value="15,200,0,0"/>

                        <Setter Target="AboutPageButton.Margin"
                                Value="15,275,0,0"/>

                        <Setter Target="LoginButton.Margin"
                                Value="15,600,0,0"/>

                        <Setter Target="RegisterButton.Margin"
                                Value="15,675,0,0"/>

                        <!--<Setter Target="Pivot.Margin"
                                Value="94,0,-94,0"/>

                        <Setter Target="Pivot.Width"
                                Value="300"/>

                        <Setter Target="PivotItemOrders.Width"
                                Value="300"/>

                        <Setter Target="PivotItemProducts.Width"
                                Value="300"/>

                        <Setter Target="PivotItemSellers.Width"
                                Value="300"/>-->


                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MinWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="#558c2f" />
                        <Setter Target="GridViewHeader.RowSpan"
                                Value="3" />

                        <Setter Target="GridViewHeader.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="MainGrid.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="MainGrid.VerticalAlignment"
                                Value="Top" />

                        <Setter Target="GridViewHeader.Width"
                                Value="100px" />


                        <Setter Target="GridViewFooter.Visibility"
                                Value="Collapsed"/>

                        <Setter Target="bike.Margin"
                                Value="15,15,0,0"/>

                        <Setter Target="HomePageButton.Margin"
                                Value="15,125,0,0"/>

                        <Setter Target="ContactPageButton.Margin"
                                Value="15,200,0,0"/>

                        <Setter Target="AboutPageButton.Margin"
                                Value="15,275,0,0"/>

                        <Setter Target="LoginButton.Margin"
                                Value="15,600,0,0"/>

                        <Setter Target="RegisterButton.Margin"
                                Value="15,675,0,0"/>

                        <!--<Setter Target="Pivot.Margin"
                                Value="94,0,-94,0"/>

                        <Setter Target="Pivot.Width"
                                Value="00"/>

                        <Setter Target="PivotItemOrders.Width"
                                Value="300"/>

                        <Setter Target="PivotItemProducts.Width"
                                Value="300"/>

                        <Setter Target="PivotItemSellers.Width"
                                Value="300"/>-->

                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid x:Name="GridViewHeader" Grid.Column="0" Grid.Row="0">
            <Image x:Name="bike" Source="/Assets/bike.png" HorizontalAlignment="Left" Height="75" Margin="274,5,0,0" VerticalAlignment="Top" Width="75" AllowDrop="True" Opacity="100"/>
            <Button x:Name="HomePageButton" Command="{Binding MoveToHomePage}" Content="Home" Margin="420,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:Name="AboutPageButton" Command="{Binding MoveToAboutPage}" Content="About" Margin="509,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:Name="ContactPageButton" Command="{Binding MoveToContactPage}" Content="Contact" Margin="620,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:Name="LoginButton" Command="{Binding MoveToLoginPage}" Content="Login" Margin="1109,40,0,0" VerticalAlignment="Top" Background="{x:Null}" Height="33" FontWeight="Bold"/>
            <Button x:Name="RegisterButton" Command="{Binding MoveToRegisterPage}" Content="Register" Margin="1200,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>

        </Grid>

        <Grid x:Name="MainGrid" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">



            <!--<Pivot x:Name="Pivot">
                <PivotItem x:Name="PivotItemOrders" Header="Orders">
                    
                </PivotItem>
                <PivotItem x:Name="PivotItemProducts" Header="Products">
                    
                </PivotItem>
                <PivotItem x:Name="PivotItemSellers" Header="Sellers">
                    <Button Command="{Binding MoveToRegisterPage}" Grid.Row="0" x:Name="CreateSellerButton" Content="Create" VerticalAlignment="Top" Background="{x:Null}"/>
                    <sellerUc:ListSellerUC HorizontalAlignment="Left" DataContext="{Binding DataSeller.sellerList, Mode=TwoWay}" x:Name="sellerList"/>
                </PivotItem>

                <PivotItem x:Name="PivotItemCustomers" Header="Customers">

                </PivotItem>

            </Pivot>-->

            <Button Content="Seller" Command="{Binding MoveToSellerPage}" Margin="411,125,0,0" Grid.Row="1" VerticalAlignment="Top" Width="502"/>
            <Button Content="Customer" Command="{Binding MoveToCustomerPage}" Margin="411,207,0,0" Grid.Row="1" VerticalAlignment="Top" Width="502"/>
            <Button Content="Order" Command="{Binding MoveToOrderPage}" Margin="411,293,0,0" Grid.Row="1" VerticalAlignment="Top" Width="502"/>
            <Button Content="Product" Command="{Binding MoveToProductPage}" Margin="411,375,0,0" Grid.Row="1" VerticalAlignment="Top" Width="502"/>

        </Grid>





        <Grid x:Name="GridViewFooter" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">



        </Grid>
        

    </Grid>



</Page>
