<Page
    x:Class="UWP_FilRouge.Views.ViewModelLight.ElementOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_FilRouge.Views.ViewModelLight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding BlankPageInstance, Source={StaticResource Locator}}">

    <StackPanel>
        <TextBox x:Name="txtB1" Text="{Binding Order.Quantity, Mode=TwoWay}"/>
        <TextBox x:Name="txtB2" Text="{Binding Order.Customer, Mode=TwoWay}"/>
        <TextBlock x:Name="txtB3" Text="{Binding Order.Seller, Mode=OneWay}"/>
        <Button x:Name="btn1" Command="{Binding ButtonClick}" Content="{Binding ButtonContent, Mode=OneTime}"/>
    </StackPanel>
</Page>
