<Page
    x:Class="UWP_FilRouge.Views.ViewModelLight.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_FilRouge.Views.ViewModelLight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Width="Auto" x:Name="mainGrid" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid x:ConnectionId='3' Width="Auto" Background="#558c2f" x:Name="headerGrid" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
            <Image x:ConnectionId='5' x:Name="bike" Source="/Assets/bike.png" HorizontalAlignment="Left" Height="75" Margin="274,5,0,0" VerticalAlignment="Top" Width="75" AllowDrop="True" Opacity="100"/>
            <Button x:ConnectionId='6' x:Name="SellerButton" Content="Seller" Margin="420,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='7' x:Name="CustomerButton" Content="Customer" Margin="509,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='8' x:Name="OrderButton" Content="Order" Margin="620,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='9' x:Name="LoginButton" Content="Login" Margin="1109,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='10' x:Name="RegisterButton" Content="Register" Margin="1200,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>

        </Grid>



        <Grid x:ConnectionId='4' Background="#558c2f" x:Name="footerGrid" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">



        </Grid>


    </Grid>
</Page>

