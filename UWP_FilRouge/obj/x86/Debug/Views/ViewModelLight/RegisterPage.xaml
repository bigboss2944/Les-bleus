<Page
    x:Class="UWP_FilRouge.Views.ViewModelLight.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_FilRouge.Views.ViewModelLight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Width="Auto" x:Name="mainGrid" >

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource LargeWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="Green" />

                        <Setter Target="GridViewFooter.Background"
                                Value="Green" />

                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MediumWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="Green" />
                        <Setter Target="GridViewHeader.RowSpan"
                                Value="3" />

                        <Setter Target="GridViewHeader.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="GridViewHeader.Width"
                                Value="100px" />

                        <Setter Target="GridViewFooter.Visibility"
                                Value="Collapsed" />

                        <Setter Target="bike.Margin"
                                Value="15,15,0,0"/>

                        <Setter Target="SellerButton.Margin"
                                Value="15,75,0,0"/>

                        <Setter Target="CustomerButton.Margin"
                                Value="15,150,0,0"/>

                        <Setter Target="OrderButton.Margin"
                                Value="15,225,0,0"/>

                        <Setter Target="LoginButton.Margin"
                                Value="15,600,0,0"/>

                        <Setter Target="RegisterButton.Margin"
                                Value="15,675,0,0"/>


                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MinWindowSnapPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridViewHeader.Background"
                                Value="Green" />
                        <Setter Target="GridViewHeader.RowSpan"
                                Value="3" />

                        <Setter Target="GridViewHeader.HorizontalAlignment"
                                Value="left" />

                        <Setter Target="GridViewHeader.Width"
                                Value="100px" />

                        <Setter Target="GridViewFooter.Visibility"
                                Value="Collapsed" />

                        <Setter Target="bike.Margin"
                                Value="15,15,0,0"/>

                        <Setter Target="SellerButton.Margin"
                                Value="15,75,0,0"/>

                        <Setter Target="CustomerButton.Margin"
                                Value="15,150,0,0"/>

                        <Setter Target="OrderButton.Margin"
                                Value="15,225,0,0"/>

                        <Setter Target="LoginButton.Margin"
                                Value="15,600,0,0"/>

                        <Setter Target="RegisterButton.Margin"
                                Value="15,675,0,0"/>

                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid x:ConnectionId='3' x:Name="GridViewHeader" Grid.Column="0" Grid.Row="0">
            <Image x:ConnectionId='11' x:Name="bike" Source="/Assets/bike.png" HorizontalAlignment="Left" Height="75" Margin="274,5,0,0" VerticalAlignment="Top" Width="75" AllowDrop="True" Opacity="100"/>
            <Button x:ConnectionId='12' x:Name="SellerButton" Content="Seller" Margin="420,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='13' x:Name="CustomerButton" Content="Customer" Margin="509,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='14' x:Name="OrderButton" Content="Order" Margin="620,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='15' x:Name="LoginButton" Content="Login" Margin="1109,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Button x:ConnectionId='16' x:Name="RegisterButton" Content="Register" Margin="1200,40,0,0" VerticalAlignment="Top" Background="{x:Null}"/>

        </Grid>

        <Grid x:ConnectionId='4' x:Name="main" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>


            </Grid.ColumnDefinitions>
            <TextBox x:ConnectionId='6' x:Name="ID" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"  Text="Please enter your ID" TextWrapping="Wrap" VerticalAlignment="Center" Background="{x:Null}"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" Text="ID:" TextWrapping="Wrap" VerticalAlignment="Center"/>
            
            <TextBox x:ConnectionId='7' x:Name="password" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" Text="Please enter your Password" TextWrapping="Wrap" VerticalAlignment="Center" Background="{x:Null}"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Center" />

            <TextBox x:ConnectionId='8' x:Name="confirm_password" Grid.Row="2" Grid.Column="0" Text="Please enter your Password" TextWrapping="Wrap" VerticalAlignment="Center" Background="{x:Null}"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Text="Please confirm your password:" TextWrapping="Wrap" VerticalAlignment="Center"/>

            <Button x:ConnectionId='9' x:Name="ConnectButton" Content="Connect" Grid.Column="0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button x:ConnectionId='10' x:Name="CancelButton" Content="Cancel" Grid.Column="1" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </Grid>





        <Grid x:ConnectionId='5' x:Name="GridViewFooter" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">



        </Grid>

    </Grid>
</Page>

